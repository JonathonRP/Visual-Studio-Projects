@model InterviewCodingQuestionPrep.Models.Cowboys

@{
    ViewBag.Title = "Delete Cowboy";
}

<div>
    <h4 class="text-danger">Cowboy</h4>
    <h5 class="text-warning">Are you sure you want to delete this?</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor( model => model.Cowboy_Name )
        </dt>

        <dd>
            @Html.DisplayFor( model => model.Cowboy_Name )
        </dd>

        <dt>
            @Html.DisplayNameFor( model => model.Indians )
        </dt>

        <dd class="col-2">
            <table class="table table-sm table-striped">
                @foreach ( var indian in Model.Indians )
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor( model => indian.Indian_Name )
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>

    @using ( Html.BeginForm() )
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
            @Html.ActionLink( "Back to List", "Index", null, new { @class = "btn btn-outline-secondary" } )
        </div>
    }
</div>
