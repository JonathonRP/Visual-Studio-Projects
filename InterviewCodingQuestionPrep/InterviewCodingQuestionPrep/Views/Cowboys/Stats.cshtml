@model InterviewCodingQuestionPrep.Models.Cowboys

@{
    ViewBag.Title = "Stats";
}

<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">

        // Load the Visualization API and the corechart package.
        google.charts.load('current', { 'packages': ['corechart'] });

        // Set a callback to run when the Google Visualization API is loaded.
        google.charts.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {

            // Create the data table.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Cowboy');
            data.addColumn('number', 'Kills');

            // Set chart options
            var options = {
                'title': 'How many did @Model.Cowboy_Name kill',
                'width': 400,
                'height': 300
            };

            $.ajax({
                url: '@Url.Action("Count", "Cowboys")',
                datatype: "json",
                type: "get",
                async: false,
                data: { Id: @Model.Id},
                contentType: 'application/json; charset=utf-8',
                success: function (d) {
                    data.addRow([d.Label, d.Count]);
                }
            })

            $.ajax({
                url: '@Url.Action("Count", "Indians")',
                datatype: "json",
                type: "get",
                async: false,
                data: {},
                contentType: 'application/json; charset=utf-8',
                success: function (d) {
                    data.addRow([d.Label, d.Count - @Model.Indians.Count]);
                }
            })

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
</head>

<body>
    <!--Div that will hold the pie chart-->

    <h2>@ViewBag.Title</h2>
    <div id="chart_div"></div>
</body>

