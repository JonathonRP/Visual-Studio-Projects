@model IEnumerable<MGO.Models.Employee>

@{
    ViewBag.Controller = "Employees";
}

<h1 class="row mgo-row text-center">@ViewBag.Controller</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Emp_FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Commission)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_LName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Commission)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Emp_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Emp_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Emp_ID })
        </td>
    </tr>
}

</table>
