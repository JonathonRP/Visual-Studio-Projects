@model IEnumerable<MGO.Models.Sale>

@{
    ViewBag.Controller = "Sales";
}

<h1 class="row mgo-row text-center">@ViewBag.Controller</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.S_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Cust_FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Emp_FName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.S_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.S_Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Cust_FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Emp_FName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Sale_Num }) |
            @Html.ActionLink("Details", "Details", new { id=item.Sale_Num }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Sale_Num })
        </td>
    </tr>
}

</table>
